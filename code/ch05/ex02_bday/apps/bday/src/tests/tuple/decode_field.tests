decode_field_01_test() ->
    Result = decode_field("aaa,bbb"),
    ?assertEqual({go_on, "aaa", "bbb"}, Result).

decode_field_02_test() ->
    String = "\"a\r\nbc\"",
    Result = decode_field(String),
    ?assertEqual({done, String, ""}, Result).

decode_field_03_test() ->
    String = "\"a\"\"a\"\r\nbc",
    Result = decode_field(String),
    ?assertEqual({done, "\"a\"a\"", "bc"}, Result).
