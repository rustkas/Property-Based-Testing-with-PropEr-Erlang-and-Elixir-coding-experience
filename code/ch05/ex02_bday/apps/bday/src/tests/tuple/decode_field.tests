decode_field_01_test() ->
    Expected = {go_on, "aaa", "bbb"},
    Result = decode_field("aaa,bbb"),
    ?assertEqual(Expected, Result).

decode_field_02_test() ->
    Expected = {done, String, ""},
    String = "\"a\r\nbc\"",
    Result = decode_field(String),
    ?assertEqual(Expected, Result).

decode_field_03_test() ->
    Expected = {done, "\"a\"a\"", "bc"},
    String = "\"a\"\"a\"\r\nbc",
    Result = decode_field(String),
    ?assertEqual(Expected, Result).

decode_field_04_test() ->
    Expected = {go_on, "", ",\r\n,,\r\n,,\r\n,,"},
    String = ",,\r\n,,\r\n,,\r\n,,",
    Result = decode_field(String),
    ?assertEqual(Expected, Result).
